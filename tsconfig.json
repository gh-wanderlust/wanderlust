{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "outDir": "build",
    "rootDirs": ["./", "../"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__"
    // "pages/listings/index.tsx"
  ]
}
